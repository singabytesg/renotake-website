# ============================================
# RenoTake Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values

# --------------------------------------------
# Next.js Configuration
# --------------------------------------------
# The URL of your application (no trailing slash)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Environment: development | preview | production
NEXT_PUBLIC_ENV=development

# --------------------------------------------
# Analytics & Monitoring
# --------------------------------------------
# Vercel Analytics (if using Vercel)
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# Google Analytics (Required for tracking)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Search Console Verification
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=your-verification-code

# --------------------------------------------
# API Keys & External Services
# --------------------------------------------
# Example: OpenAI API key (for RenoAI feature)
# OPENAI_API_KEY=sk-...

# Example: Database connection string
# DATABASE_URL=postgresql://user:password@localhost:5432/renotake

# Example: Email service (SendGrid, Resend, etc.)
# EMAIL_API_KEY=
# EMAIL_FROM=noreply@renotake.sg

# --------------------------------------------
# Feature Flags
# --------------------------------------------
# Enable/disable features
NEXT_PUBLIC_FEATURE_AI_CHAT=false
NEXT_PUBLIC_FEATURE_USER_AUTH=false

# --------------------------------------------
# SEO & Social
# --------------------------------------------
# Used for meta tags and social sharing
NEXT_PUBLIC_SITE_NAME=RenoTake
NEXT_PUBLIC_SITE_DESCRIPTION=Singapore's Intelligent Renovation Guide
SITE_URL=https://renotake.sg

# Social Media Handles
NEXT_PUBLIC_FACEBOOK_PAGE_ID=renotakesg
NEXT_PUBLIC_INSTAGRAM_HANDLE=renotakesg
NEXT_PUBLIC_TWITTER_HANDLE=renotakesg

# --------------------------------------------
# Email Marketing & Lead Generation
# --------------------------------------------
# Resend API Configuration (Email service)
RESEND_API_KEY=re_your_resend_api_key_here

# Resend Audience ID (optional - for managing contacts in Resend)
# Create an audience in Resend dashboard and paste the ID here
# This audience is used for both newsletter subscriptions and RenoAI waitlist
RESEND_AUDIENCE_ID=your_audience_id_here

# Lead Magnet Download URL
NEXT_PUBLIC_LEAD_MAGNET_URL=/downloads/hdb-renovation-checklist-2024.pdf