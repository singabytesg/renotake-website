# ============================================
# RenoTake Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values

# --------------------------------------------
# Next.js Configuration
# --------------------------------------------
# The URL of your application (no trailing slash)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Environment: development | preview | production
NEXT_PUBLIC_ENV=development

# --------------------------------------------
# Analytics & Monitoring
# --------------------------------------------
# Vercel Analytics (if using Vercel)
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# Google Analytics
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# --------------------------------------------
# API Keys & External Services
# --------------------------------------------
# Example: OpenAI API key (for RenoAI feature)
# OPENAI_API_KEY=sk-...

# Example: Database connection string
# DATABASE_URL=postgresql://user:password@localhost:5432/renotake

# Example: Email service (SendGrid, Resend, etc.)
# EMAIL_API_KEY=
# EMAIL_FROM=noreply@renotake.sg

# --------------------------------------------
# Feature Flags
# --------------------------------------------
# Enable/disable features
NEXT_PUBLIC_FEATURE_AI_CHAT=false
NEXT_PUBLIC_FEATURE_USER_AUTH=false

# --------------------------------------------
# SEO & Social
# --------------------------------------------
# Used for meta tags and social sharing
NEXT_PUBLIC_SITE_NAME=RenoTake
NEXT_PUBLIC_SITE_DESCRIPTION=Singapore's Intelligent Renovation Guide